@model IEnumerable<MyNote.Models.Item>

<div class="container p-3">
	<div class="row pt-4 ">
		<div class="col-6">
		<h2 class="text-primary">Borrowed Items List</h2>
		</div>

		<div class="col-6 align-text-right">
			<a class="btn btn-primary" asp-controller="Item" asp-action="Create">Create new Item</a>
		</div>
	</div>
	<br />
	@if (Model.Count() > 0)
	{
		<table class="table table-bordered table-striped" style="width: 100%">
			<thdead>
				<tr>
					<th>Item Name</th>
					<th>Borrower</th>
					<th>Lender</th>
				</tr>
			</thdead>
			<tbody>
				@foreach (var item in Model)
				{
					<tr>
						<td width="30%">@item.ItemName</td>
						<td width="30%">@item.Borrower</td>
						<td width="30%">@item.Lender</td>
					</tr>
				}
			</tbody>
		</table>

	}
	else
	{
		<p>No Items created yet</p>
	}
</div>


