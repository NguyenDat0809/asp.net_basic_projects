@model MyNote.Models.Expense

<form method="post" asp-action="Update" asp-controller="Expense">
	<input asp-for="Id" hidden />
	<div class="border p-3">

		<div class="form-group row">
			<h2 class="text-black-50 pl-3">Update Expense</h2>
		</div>
		<div class="row">
			<div class="col-12">
				<div class="form-group row">
					<div class="col-5">
						<label asp-for="ExpensesName"></label>
					</div>
					<div class="col-5">
						<label asp-for="Amount"></label>
					</div>

				</div>
				<div class="form-group row">
					<div class="col-5">
						<input asp-for="ExpensesName"  class="form-control" />

					</div>
					<div class="col-5">
						<input asp-validation-for="Borrower"  asp-for="Amount" class="form-control" />

					</div>

				</div>
				<div class="form-group row m-3">
					<div class="col-8 offset-2 row">
						<div class="col">
							<input type="submit" class="btn btn-success w-75 " value="Update">
						</div>
						<div class="col">
							<a class="nav-link text-dark btn btn-danger w-75" asp-action="Index" asp-controller="Expense">Back</a>
						</div>
					</div>

				</div>
			</div>
		</div>
	</div>
</form>

<!-- chèn script js check client-side-->
@section Scripts {
	@{
		<partial name="_ValidationScriptsPartial" />
	}
}